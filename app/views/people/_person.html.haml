= turbo_frame_tag person do
  .person.border.entry1
    .row
      .col-md-1
        - ava_pic = person.ava.thumb.url ? person.ava.thumb.url: 'thumb_anonymous.png'
        = image_tag(ava_pic, :class=>"ava_pic", size: "150x150")
      .col-md-11
        %h2.index_show_button
          = person.name
        %p.about_text
          = person.about

        .row
          .col-md-8
          .col-md-2
            = button_to 'Edit', edit_person_path(person), method: :get, class: 'btn btn-link'
          .col-md-2
            = button_to 'Delete', person_path(person), method: :delete, class: 'btn btn-link', form: { data: { turbo_confirm: "Are you sure you want to delete this?"} }
