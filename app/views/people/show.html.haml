%p#notice= notice

%h1
  = @person.name

%h2 Companies:
- @person.company_people.each do |company_person|
  = render partial: "company_people/short_person_company", locals: {company_person: company_person}

%h2{ style: 'clear:both' } Opportunities:
- @person.opportunities.each do |opportunity|
  = render partial: "opportunities/opportunity", locals: {opportunity: opportunity}

- content_for :sidebar do
  - ava_pic = @person.ava.normal.url ? @person.ava.normal.url: 'thumb_anonymous.png'
  .ava_holder
    = image_tag ava_pic, :class=>"ava_big_pic"
  .border.about_text_frame
    %p{:class=>"show_field"}
      %b About:
      = @person.about
  %p{:class=>"show_field"}
    %b Phone:
    = @person.phone
  %p{:class=>"show_field"}
    %b Email:
    = @person.email
  %p{:class=>"show_field"}
    %b Facebook:
    = @person.facebook
  %p{:class=>"show_field"}
    %b Twitter:
    = @person.twitter
  %p{:class=>"show_field"}
    %b Web:
    = @person.web

  %p{:class=>"show_field"}
    %b Curator:
    = @person.user.name

  = link_to 'Edit', edit_person_path(@person)
  \|
  = link_to 'Back to People list', people_path
